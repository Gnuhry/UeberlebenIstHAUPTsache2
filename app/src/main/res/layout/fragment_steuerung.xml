<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:background="@color/steuerung_black"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="125dp">
        <ImageView
            android:id="@+id/imVDown"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_arrow_drop_down_white_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/SteuerungRunter"/>
        <Button
            android:layout_width="210px"
            android:layout_height="80px"
            android:id="@+id/btnrunter"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:visibility="visible"
            android:background="@drawable/down"/>
        <LinearLayout
            android:id="@+id/LL1"
            android:layout_width="380px"
            android:layout_height="90px"
            android:layout_above="@id/btnrunter"
            android:layout_centerHorizontal="true">
            <Button
                android:layout_width="190px"
                android:layout_height="wrap_content"
                android:id="@+id/btnlinks"
                android:visibility="visible"
                android:background="@drawable/left"/>
            <Button
                android:layout_width="190px"
                android:layout_height="wrap_content"
                android:id="@+id/btnrechts"
                android:visibility="visible"
                android:background="@drawable/right"/>
        </LinearLayout>
        <Button
            android:layout_width="220px"
            android:layout_height="80px"
            android:id="@+id/btnhoch"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/LL1"
            android:visibility="visible"
            android:background="@drawable/up"/>
        <TextView
            android:id="@+id/txV1"
            android:textColor="#FFFFFF"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/txV2"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>
        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:textSize="30sp"
            android:textIsSelectable="false"
            android:id="@+id/chronometer"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#FFFF"/>
        <ImageView
            android:contentDescription="@string/KeyAnzeige"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:id="@+id/keyanzeige"
            android:layout_alignParentBottom="true"
            android:src="@drawable/keyanzeige"/>
    </RelativeLayout>

